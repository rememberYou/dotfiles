# Set window key.
set $mod Mod4

# Set navigation keys.
set $down j
set $left h
set $right l
set $up k

# Set global variables.
set $browser qutebrowser
set $locker exec swaylock --ignore-empty-password --show-failed-attempt --indicator-caps-lock --scaling fill \
                            -i ~/Pictures/locker.jpg
set $menu rofi
set $term alacritty

# Set font for window titles.
font pango:Terminus 9

# Drag floating windows with $mod+mouse.
floating_modifier $mod

# The window takes the focus when an event occurs.
focus_on_window_activation focus

# Set gaps.
gaps inner 6
gaps outer 6
smart_gaps on

# Hide window borders adjacent to the screen edges.
hide_edge_borders both

# Set default border style for new windows.
default_floating_border pixel 1
default_border pixel 1

# Switch back to the prior workspace when repeating a workspace.
workspace_auto_back_and_forth yes

# Hides the cursor after no activity.
seat seat0 hide_cursor 5000


exec swayidle -w \
    timeout 900 'swaylock --ignore-empty-password --show-failed-attempt --indicator-caps-lock --scaling fill -i ~/Pictures/locker.jpg' \
    timeout 1000 'swaymsg "output * dpms off"' \
        resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock --ignore-empty-password --show-failed-attempt --indicator-caps-lock --scaling fill -i ~/Pictures/locker.jpg'